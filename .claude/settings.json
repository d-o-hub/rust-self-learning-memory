{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "name": "Protect Sensitive Files",
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/protect-secrets.sh || exit 0",
            "timeout": 10
          }
        ]
      },
      {
        "name": "Validate Rust Syntax",
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(echo \"$CLAUDE_TOOL_INPUT\" | jq -r '.file_path // empty' 2>/dev/null); if [ -n \"$file_path\" ] && echo \"$file_path\" | grep -q '\\.rs$'; then cargo check --quiet 2>&1 || (echo 'Rust syntax error detected' && exit 2); fi; exit 0",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "name": "Auto-format Rust Code",
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-edit.sh || true",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "name": "Final Verification",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/final-check.sh || exit 0",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
