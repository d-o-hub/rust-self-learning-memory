# Environment variables for Memory CLI
# This configuration is optimized for local development without Turso cloud database

# Turso Database Configuration (Optional - leave empty for local-only setup)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Local Database Configuration
# Use SQLite file as local database (fallback when Turso is not configured)
LOCAL_DATABASE_URL=sqlite:./data/memory.db
MEMORY_REDB_PATH=./data/memory.redb

# Data directories
MEMORY_DATA_DIR=./data
MEMORY_BACKUP_DIR=./backups

# Logging Configuration
RUST_LOG=info
MEMORY_LOG_LEVEL=info

# Memory Configuration
MEMORY_MAX_EPISODES_CACHE=1000
MEMORY_CACHE_TTL_SECONDS=3600

# CLI Configuration
MEMORY_CLI_FORMAT=human
MEMORY_CLI_PROGRESS_BARS=true
MEMORY_CLI_BATCH_SIZE=100

# Development Settings
MEMORY_DEV_MODE=true
MEMORY_AUTO_INIT_DB=true

# Security (if applicable)
# MEMORY_ENCRYPTION_KEY=your-encryption-key-here