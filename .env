# Memory CLI Environment Configuration - Unified Setup
# This ensures consistent behavior across all components

# Database Configuration
# Primary SQLite database (source of truth)
LOCAL_DATABASE_URL=file:./data/memory.db
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Unified redb cache path (consistent across all presets)
REDB_PATH=./data/cache.redb

# Data Directories
MEMORY_DATA_DIR=./data
MEMORY_CACHE_DIR=./data
MEMORY_BACKUP_DIR=./backups

# Storage Settings
MEMORY_MAX_EPISODES_CACHE=1000
MEMORY_CACHE_TTL_SECONDS=3600
MEMORY_POOL_SIZE=10

# CLI Configuration
MEMORY_CLI_FORMAT=human
MEMORY_CLI_PROGRESS_BARS=true
MEMORY_CLI_BATCH_SIZE=100
MEMORY_CLI_CONFIG=./unified-config.toml

# Logging Configuration
RUST_LOG=info
MEMORY_LOG_LEVEL=info

# Development Settings
MEMORY_DEV_MODE=true
MEMORY_AUTO_INIT_DB=true

# Enable unified storage validation
MEMORY_VALIDATE_STORAGE=true
