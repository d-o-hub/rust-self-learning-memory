{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/big-pickle",
  "provider": {
    "perplexity": {
      "npm": "@ai-sdk/perplexity",
      "name": "Perplexity AI",
      "options": {
        "baseURL": "https://api.perplexity.ai",
        "search_language_filter": ["en"]
      },
      "models": {
        "sonar": {
          "name": "Perplexity Sonar",
          "options": {
            "search_language_filter": ["en"]
          }
        },
        "sonar-pro": {
          "name": "Perplexity Sonar Pro",
          "options": {
            "search_language_filter": ["en"]
          }
        },
        "sonar-reasoning": {
          "name": "Perplexity Sonar Reasoning",
          "options": {
            "search_language_filter": ["en"]
          }
        }
      }
    }
  },
    "mcp": {
      "memory-mcp": {
        "type": "local",
        "command": ["cargo", "run", "--quiet", "--bin", "memory-mcp-server", "--manifest-path", "memory-mcp/Cargo.toml"],
        "enabled": true,
          "environment": {
            "RUST_LOG": "info",
            "TURSO_DATABASE_URL": "file:./data/memory.db",
            "REDB_CACHE_PATH": "./data/cache.redb",
            "REDB_MAX_CACHE_SIZE": "1000",
            "MCP_CACHE_WARMING_ENABLED": "true"
         }
      }
    }
}