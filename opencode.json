{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "perplexity": {
      "npm": "@ai-sdk/perplexity",
      "name": "Perplexity AI",
      "options": {
        "baseURL": "https://api.perplexity.ai",
        "search_language_filter": ["en"]
      },
      "models": {
        "sonar": {
          "name": "Perplexity Sonar",
          "options": {
            "search_language_filter": ["en"]
          }
        },
        "sonar-pro": {
          "name": "Perplexity Sonar Pro",
          "options": {
            "search_language_filter": ["en"]
          }
        },
        "sonar-reasoning": {
          "name": "Perplexity Sonar Reasoning",
          "options": {
            "search_language_filter": ["en"]
          }
        },
        "sonar-reasoning-pro": {
          "name": "Perplexity Sonar Reasoning Pro",
          "options": {
            "search_language_filter": ["en", "de"]
          }
        },
      }
    }
  },
  "mcp": {
    "memory-mcp": {
      "type": "local",
      "command": ["cargo", "run", "--bin", "memory-mcp-server", "--manifest-path", "memory-mcp/Cargo.toml"],
      "enabled": true,
      "environment": {
        "RUST_LOG": "info"
      }
    }
  }
}