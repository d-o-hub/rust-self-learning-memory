{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-4.7",
  "default_agent": "memory-agent",
  "provider": {
    "netmind": {
      "npm": "@ai-sdk/anthropic",
      "name": "NetMind",
      "options": {
        "baseURL": "https://api.netmind.ai/inference-api/anthropic"
      },
      "models": {
        "minimax/minimax-m2.5": {
          "name": "MiniMax M2.5"
        }
      }
    },
    "perplexity": {
      "npm": "@ai-sdk/perplexity",
      "name": "Perplexity AI",
      "options": {
        "baseURL": "https://api.perplexity.ai",
        "search_language_filter": [
          "en"
        ]
      },
      "models": {
        "sonar": {
          "name": "Perplexity Sonar",
          "options": {
            "search_language_filter": [
              "en"
            ]
          }
        },
        "sonar-pro": {
          "name": "Perplexity Sonar Pro",
          "options": {
            "search_language_filter": [
              "en"
            ]
          }
        },
        "sonar-reasoning": {
          "name": "Perplexity Sonar Reasoning",
          "options": {
            "search_language_filter": [
              "en"
            ]
          }
        }
      }
    }
  },
  "mcp": {
    "memory-mcp": {
      "type": "local",
      "command": [
        "/home/do/rust-self-learning-memory/scripts/preflight-memory-mcp.sh"
      ],
      "enabled": true,
      "timeout": 5000,
      "environment": {
        "TURSO_DATABASE_URL": "file:/home/do/rust-self-learning-memory/data/memory.db",
        "LOCAL_DATABASE_URL": "sqlite:/home/do/rust-self-learning-memory/data/memory.db",
        "REDB_CACHE_PATH": "/home/do/rust-self-learning-memory/data/cache.redb",
        "REDB_MAX_CACHE_SIZE": "1000",
        "MCP_CACHE_WARMING_ENABLED": "true",
        "MEMORY_MAX_EPISODES_CACHE": "1000",
        "MEMORY_CACHE_TTL_SECONDS": "1800",
        "RUST_LOG": "off"
      }
    }
  },
  "tools": {
    "memory-mcp_*": false
  },
  "agent": {
    "memory-agent": {
      "description": "Uses episodic memory for context-aware task execution with token optimization",
      "tools": {
        "memory-mcp_query_memory": true,
        "memory-mcp_analyze_patterns": true,
        "memory-mcp_create_episode": true,
        "memory-mcp_complete_episode": true,
        "memory-mcp_add_episode_step": true,
        "memory-mcp_get_episode": true,
        "memory-mcp_health_check": true,
        "memory-mcp_get_metrics": true
      }
    }
  }
}
